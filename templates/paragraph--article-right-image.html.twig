<div class="article-section" id="{{content.field_anchor_id.0}}">
	<div class="large-12 float-left article-right-image">
  		<h2>{{ content.field_headline }}</h2>
  		<div class="wrap-text-image-right">
  			{% if content.field_image %}
  				{{ content.field_image }}
  			{% endif %}
  			{% if content.field_remote_image_url|render is not empty %}
  				<img src="{{ content.field_remote_image_url.0 }}" alt="Remote image" />
  			{% endif %}
  		</div>
  		<div class="wrap-text-left">
  			<p>{{ content.field_text_area }}</p>
  		</div>
	</div>
	{%if content.field_youtube_url %}
  {% for item in content.field_youtube_url|children %}
  <div class="large-12 columns">
    <div class="responsive-embed widescreen">  
      <iframe width="560" height="315" title="Remote video" src="{{ item }}" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>
  {% endfor %}
  {% endif %}
</div>