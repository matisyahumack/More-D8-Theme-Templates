<div class="article-section" id="{{content.field_anchor_id.0}}">
<div class="large-12 float-left single-product-promo">
  <h2>{{ content.field_headline }}</h2>
  <div class="large-12 float-left">
    <div class="wrap-text-image-right">
      {{ content.field_image }}
    </div>
  	<div class="wrap-text-left">
  		<p>{{ content.field_text_area }}</p>
  	</div>
  </div>
  <div class="large-12 float-left view-product">
  	<a href="{{ content.field_link_to_product[0]['#url'] }}">View product</a>
  </div>
</div>
</div>