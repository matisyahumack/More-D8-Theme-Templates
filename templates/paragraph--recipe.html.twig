<div class="article-section article-recipe" id="{{content.field_anchor_id.0}}">
	<div class="large-12 float-left">
		<h2>{{ content.field_recipe_title }}</h2>
		<div class="by-line large-12 float-left"><p>{{ 'by:' |t }} <span> {{ content.field_by_line.0 }}</span></p></div>
	</div>
	<div class="large-12 float-left">
		<div class="wrap-text-image-right">
  			{% if content.field_image %}
  				{{ content.field_image }}
  			{% endif %}
  			{% if content.field_remote_image_url %}
  				<img src="{{ content.field_remote_image_url.0 }}" alt="recipe image from remote site" />
  			{% endif %}
  		</div>
  		<div class="wrap-text-left">
  			<p>{{ content.field_recipe_body }}</p>
  		</div>
      <div class="large-12 small-12 float-left serif recipe-link">{{ content.field_external_link }}</div>
	   {%if content.field_youtube_url %}
  {% for item in content.field_youtube_url|children %}
  <div class="large-12 columns">
    <div class="responsive-embed widescreen">  
      <iframe width="560" height="315" title="Recipe video" src="{{ item }}" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>
  {% endfor %}
  {% endif %}
	</div>
</div>